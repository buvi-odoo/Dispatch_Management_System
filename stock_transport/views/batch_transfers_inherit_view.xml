        <record id="batch_transfers_inherit_view_form" model="ir.ui.view">
            <field name="name">batch.tansfers.inherit.view.form</field>
            <field name="model">stock.picking.batch</field>
            <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='scheduled_date']" position="after">
                    <field name="dock_id"/>
                    <field name="fleet_vehicle_id"/>
                    <field name="fleet_category_id"/>

                    <field name="total_weight" widget='progressbar' />
                    <field name="total_volume" widget='progressbar'/>

                </xpath>

            </field>
        </record>








   
